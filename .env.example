# TruthLens AI - Environment Configuration
# Скопируйте этот файл в .env и заполните своими значениями

# ===== API KEYS =====
# Получите бесплатно на https://serpapi.com (100 запросов/месяц)
SERP_API_KEY=your_serpapi_key_here

# Или используйте Bing Search API: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_API_KEY=your_bing_api_key_here

# Google Custom Search (опционально)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_custom_search_engine_id

# ===== DATABASE =====
# SQLite для разработки (по умолчанию)
DATABASE_URL=sqlite:///./truthlens.db

# PostgreSQL для продакшена (раскомментируйте при необходимости)
# DATABASE_URL=postgresql://user:password@localhost:5432/truthlens

# ===== ML MODELS =====
# Основная модель классификации
MODEL_NAME=xlm-roberta-base

# Альтернативы (если мало памяти):
# MODEL_NAME=distilbert-base-multilingual-cased
# MODEL_NAME=microsoft/Multilingual-MiniLM-L12-H384

# Модель для embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===== SERVER SETTINGS =====
# Адрес сервера
HOST=0.0.0.0

# Порт (измените если 8000 занят)
PORT=8000

# Режим отладки (True для разработки, False для продакшена)
DEBUG=True

# ===== SECURITY =====
# Секретный ключ для шифрования (ОБЯЗАТЕЛЬНО измените в продакшене!)
SECRET_KEY=change-this-to-random-secret-key-in-production

# Алгоритм шифрования
ALGORITHM=HS256

# Время жизни токена (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== CORS =====
# Разрешённые origins (через запятую)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# Для продакшена добавьте ваш домен:
# CORS_ORIGINS=http://localhost:8080,https://yourdomain.com

# ===== RATE LIMITING =====
# Максимум запросов в час на один IP
RATE_LIMIT_PER_HOUR=100

# Максимум запросов в день
RATE_LIMIT_PER_DAY=1000

# ===== CACHING =====
# Включить кеширование запросов
ENABLE_CACHE=True

# Время жизни кеша (в секундах, 86400 = 24 часа)
CACHE_TTL=86400

# Redis URL (опционально, для продакшена)
# REDIS_URL=redis://localhost:6379/0

# ===== LOGGING =====
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/app.log

# Максимальный размер файла лога (в байтах, 10MB)
LOG_MAX_SIZE=10485760

# Количество файлов бэкапа
LOG_BACKUP_COUNT=5

# ===== PERFORMANCE =====
# Максимальная длина текста (в символах)
MAX_TEXT_LENGTH=10000

# Таймаут для web search (в секундах)
SEARCH_TIMEOUT=10

# Количество результатов поиска
SEARCH_MAX_RESULTS=5

# ===== FEATURES =====
# Включить регистрацию пользователей
ENABLE_USER_REGISTRATION=False

# Включить систему обратной связи
ENABLE_FEEDBACK=True

# Включить статистику
ENABLE_STATISTICS=True

# ===== DEPLOYMENT =====
# Окружение: development, staging, production
ENVIRONMENT=development

# URL продакшен API (для CORS и редиректов)
PRODUCTION_URL=https://truthlens-api.onrender.com

# Sentry DSN для мониторинга ошибок (опционально)
# SENTRY_DSN=your_sentry_dsn_here

# ===== WORKERS =====
# Количество worker процессов для Gunicorn (продакшен)
WORKERS=4

# Количество потоков на worker
THREADS=2

# Таймаут worker (в секундах)
WORKER_TIMEOUT=120

# ===== NOTES =====
# 1. Никогда не коммитьте .env файл в Git!
# 2. В продакшене используйте сильные SECRET_KEY
# 3. API ключи получите на официальных сайтах
# 4. Для генерации SECRET_KEY используйте:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"